<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SqlMapLog">
    
    <resultMap id="Log" type="es.ubiqua.compareme.model.Log">
        <result property="id" column="id"/>
        <result property="type" column="name"/>
        <result property="date" column="date"/>
        <result property="data" column="data"/>
    </resultMap>
    
    <select id="list" resultMap="SqlMapLog.Log">
        SELECT * FROM RepositoryLog;
    </select>
    
    <select id="get" parameterType="es.ubiqua.compareme.model.Log" resultMap="SqlMapLog.Log">
        SELECT * FROM RepositoryLog WHERE name LIKE #{name} OR id = #{id};
    </select>
   
    <insert id="add" parameterType="es.ubiqua.compareme.model.Log" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO RepositoryLog (type,date,data) 
        	VALUES (
        		#{type},
        		#{date},
        		#{data}
        	)
        	
        <selectKey keyProperty="id" resultType="int" order="AFTER">
			SELECT LAST_INSERT_ID();
	  	</selectKey>
	  	
    </insert>
</mapper>
