<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="true" />
 	<constant name="struts.configuration.xml.reload" value="true" />
 	<constant name="struts.action.extension" value="html" />
	
    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <action name="index" class="es.ubiqua.compareme.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="helloWorld" class="es.ubiqua.compareme.HelloWorldAction">
            <result name="input">/jsp/index.jsp</result>
            <result>/WEB-INF/jsp/helloWorld.jsp</result>
        </action>
        
    </package>
    
    <package name="api" namespace="/api" extends="json-default">
    	<action name="prices" class="es.ubiqua.compareme.actions.GetPricesAction">
           <result type="json"/>
        	<param name="encoding">UTF-8</param>
        	<param name="contentType">application/json</param>
        </action>
        <action name="addPrice" class="es.ubiqua.compareme.actions.AddPriceAction">
        	<result type="json"/>
        	<param name="encoding">UTF-8</param>
        	<param name="contentType">application/json</param>
        </action>
    </package>

</struts>
